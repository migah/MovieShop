@model IEnumerable<MovieShopDll.Entities.Movie>

@{
    ViewBag.Title = "All movies";
}

<h2>All movies</h2>

<table class="table">
   

@foreach (var item in Model)
{
   

    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
           @Html.ActionLink("Details", "Details", new { id = item.Id })
            
        
            <img src="@Html.DisplayFor(modelItem => item.ImageUrl)"/>
            
            
           
            <div class="caption">
                <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                <p>Genre: @Html.DisplayFor(modelItem => item.Genre.Name)</p>
                <p>Pris :@Html.DisplayFor(modelItem => item.Price),- kr</p>
                <p>
                    <a href="#" class="btn btn-primary">Buy Now!</a> <a href="@Html.DisplayFor(modelItem => item.TrailerUrl)" target="_blank" class="btn btn-default">Trailer</a>
                </p>
            </div>
        </div>
    </div>
    
}

</table>
